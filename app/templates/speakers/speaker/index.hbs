<div class="row">
	<div class="col-md-4 col-md-offset-4">
		{{#bs-panel heading="Speaker" type="info"}}
			<p><b>Name:</b> {{name}}</p>
			<p><b>Bio:</b> {{bio}}</p>
			<p><b>Speaker for:</b></p>
			<ul class="list-group">
				{{#each workshop in model.workshops}}
				  <li class="list-group-item">{{#link-to 'workshops.workshop' workshop}}{{workshop.name}}{{/link-to}}</li>
				{{/each}}
			</ul>
			<div>
				{{#link-to 'speakers.edit' this class='btn btn-default'}}Edit{{/link-to}}
				<button type="button" class="btn btn-danger" {{action 'deleteSpeaker'}}>Delete</button>
			</div>
		{{/bs-panel}}
	</div>
</div>

