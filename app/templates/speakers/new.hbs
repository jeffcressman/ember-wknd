<div class="row">
	<div class="col-md-4 col-md-offset-4">
	  <h2>New Speaker</h2>

	  <form role="form" {{action "createSpeaker" on="submit"}}>
	    <div class="form-group">
	      <label for="Name">Name</label>
	      {{input value=fields.name id='name' class="form-control"}}
	    </div>
	    <div class="form-group">
	    	<label for="Bio">Bio</label>
	    	{{textarea value=fields.bio id='bio'class="form-control" rows="3"}}
	    </div>
	    <button class="btn btn-primary" type="submit">Create Speaker</button>
	  </form>
	</div>
</div>