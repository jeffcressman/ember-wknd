<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<h2>New Speaker</h2>

		<form role="form" {{action "createSpeaker" on="submit"}}>
			<div class="form-group">
				<label for="new_speaker_name">Name</label>
				{{input value=fields.name id='new_speaker_name' class="form-control"}}
			</div>
			<div class="form-group">
				<label for="new_speaker_email">Email</label>
				{{input value=fields.email id='new_speaker_email' class="form-control"}}
			</div>	
			<div class="form-group">
				<label for="new_speaker_password">Password</label>
				{{input value=fields.password id='new_speaker_password' class="form-control"}}
			</div>	
			<div class="form-group">
				<label for="new_speaker_bio">Bio</label>
				{{textarea value=fields.bio id='new_speaker_bio'class="form-control" rows="3"}}
			</div>
			<button class="btn btn-primary" type="submit">Create Speaker</button>
			<button type="button" class="btn btn-default" {{action 'cancel'}}>Cancel</button>
		</form>
	</div>
</div>