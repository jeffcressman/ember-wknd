<div class="row">
	<div class="col-md-12">
		<h2>{{model.name}}</h2>
		<h4>{{model.email}}</h3>
		</ul>
	</div>
</div>

<div class="row">
	<div class="col-md-4">
		{{#bs-panel heading="Workshop Schedule" type="info"}}
			<ul class="list-group">
				{{#each registration in model.registrations}}
					<li class="list-group-item">{{#link-to 'guest.workshops.workshop' model registration.workshop}}{{registration.workshop.name}}{{/link-to}}</li>
				{{/each}}
			</ul>
		{{/bs-panel}}
		<div>
			{{#link-to 'guest.edit' model class='btn btn-default'}}Edit{{/link-to}}
			<button type="button" class="btn btn-danger" {{action 'deleteGuest'}}>Delete</button>
		</div>
	</div>
	<div class="col-md-8">
		{{outlet}}
	</div>
</div>