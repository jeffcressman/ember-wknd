<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<h4>Guests</h4>
		{{#if session.isAuthenticated}}
			<p>{{#link-to 'guest.new'}}New Guest{{/link-to}}</p>
		{{/if}}		
		<ul class="list-group">
			{{#each guest in controller}}
			  <li class="list-group-item">{{#link-to 'guest' guest}}{{guest.name}}{{/link-to}}</li>
			{{/each}}
		</ul>
	</div>
</div>